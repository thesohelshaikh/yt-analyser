<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_navigation"
    app:startDestination="@id/analyseFragment">

    <fragment
        android:id="@+id/informationFragment"
        android:name="com.thesohelshaikh.ytanalyser.ui.InformationFragment"
        android:label="@string/label_details_title"
        tools:layout="@layout/fragment_information">
        <argument
            android:name="videoID"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/analyseFragment"
        android:name="com.thesohelshaikh.ytanalyser.ui.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/to_informationFragment"
            app:destination="@id/informationFragment" />
    </fragment>
</navigation>